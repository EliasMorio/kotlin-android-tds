<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcceuilView">

    <ImageButton
        android:id="@+id/btnWalk"
        android:layout_width="71dp"
        android:layout_height="77dp"
        android:layout_marginTop="20dp"
        android:contentDescription="Marche à pied"
        app:layout_constraintEnd_toStartOf="@+id/btnBike"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transportTitle"
        app:srcCompat="@drawable/baseline_directions_walk_24" />

    <ImageButton
        android:id="@+id/btnBike"
        android:layout_width="79dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="108dp"
        android:contentDescription="Vélo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transportTitle"
        app:srcCompat="@drawable/baseline_directions_bike_24" />

    <ImageButton
        android:id="@+id/btnCar"
        android:layout_width="83dp"
        android:layout_height="76dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="52dp"
        android:contentDescription="Voiture"
        app:layout_constraintEnd_toStartOf="@+id/btnBus"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWalk"
        app:srcCompat="@drawable/baseline_directions_car_24" />

    <ImageButton
        android:id="@+id/btnBus"
        android:layout_width="83dp"
        android:layout_height="74dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="104dp"
        android:contentDescription="Bus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBike"
        app:srcCompat="@drawable/baseline_directions_bus_24" />

    <ImageButton
        android:id="@+id/btnTrain"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:contentDescription="Train"
        app:layout_constraintEnd_toStartOf="@+id/btnPlane"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCar"
        app:srcCompat="@drawable/baseline_train_24" />

    <ImageButton
        android:id="@+id/btnPlane"
        android:layout_width="81dp"
        android:layout_height="77dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:contentDescription="Avion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBus"
        app:srcCompat="@drawable/baseline_airplanemode_active_24" />

    <TextView
        android:id="@+id/transportTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Transport choisi : Aucun"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>